<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Free">

    <TextView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/schedule"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/schedule" />

    <TextView
        android:id="@+id/diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31sp"
        android:layout_marginTop="400sp"
        android:textSize="15sp"
        android:text="@string/todayDiet" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/breakfast"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="430sp"
        android:scaleType="centerCrop"
        android:src="@drawable/diet1" />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lunch"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="430sp"
        android:src="@drawable/nolunch" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dinner"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="right"
        android:layout_marginTop="430sp"
        android:layout_marginEnd="40sp"
        android:src="@drawable/nodinner" />

    <ImageButton
        android:id="@+id/plusbutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="bottom|end"
        android:background="@android:color/transparent"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/plusbutton" />

    <TextView
        android:id="@+id/todayworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31sp"
        android:layout_marginTop="525sp"
        android:textSize="15sp"
        android:text="@string/todayWorkout" />

    <ImageView
        android:id="@+id/workoutimg"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="550sp"
        android:src="@drawable/img5" />

    <TextView
        android:id="@+id/wtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180sp"
        android:layout_marginTop="570sp"
        android:textSize="12sp"
        android:text="@string/exerciseType" />

    <TextView
        android:id="@+id/workoutType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="570sp"
        android:textSize="12sp"
        android:text="(운동 종류)" />

    <TextView
        android:id="@+id/wtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180sp"
        android:layout_marginTop="610sp"
        android:textSize="12sp"
        android:text="@string/exerciseTime" />

    <TextView
        android:id="@+id/workoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="610sp"
        android:textSize="12sp"
        android:text="(운동 시간)" />

</FrameLayout>