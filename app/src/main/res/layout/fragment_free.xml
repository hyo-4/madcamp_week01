<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Free">

    <TextView
        android:id="@+id/schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/schedule"
        android:layout_marginTop="40dp"
        android:textSize="25sp"/>

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/schedule" />

    <TextView
        android:id="@+id/diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31sp"
        android:layout_marginTop="420sp"
        android:textSize="18sp"
        android:text="오늘 하루의 식단" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/breakfast"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginStart="31sp"
        android:layout_marginTop="450sp"
        android:src="@drawable/diet1" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/lunch"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="450sp"
        android:src="@drawable/diet2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dinner"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_gravity="right"
        android:layout_marginTop="450sp"
        android:layout_marginEnd="31sp"
        android:src="@drawable/diet3" />

</FrameLayout>