<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Free">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomsheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="10dp"
        android:elevation="10dp"
        app:behavior_hideable="false"
        app:behavior_peekHeight="86dp"
        app:cardCornerRadius="36dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" >



    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31sp"
        android:layout_marginTop="350sp"
        android:textSize="15sp"
        android:text="@string/todayDiet" />

    <ImageButton
        android:id="@+id/breakfast"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_marginStart="40sp"
        android:layout_marginTop="380sp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/nobreakfast" />



    <ImageButton
        android:id="@+id/lunch"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="380sp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/nolunch" />

    <ImageButton
        android:id="@+id/dinner"
        android:layout_width="90sp"
        android:layout_height="90sp"
        android:layout_gravity="right"
        android:layout_marginTop="380sp"
        android:layout_marginEnd="40sp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:src="@drawable/nodinner" />


    <TextView
        android:id="@+id/todayworkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31sp"
        android:layout_marginTop="475sp"
        android:textSize="15sp"
        android:text="@string/todayWorkout" />

    <ImageButton
        android:id="@+id/workoutimg"
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@android:color/transparent"
        android:layout_marginStart="40sp"
        android:layout_marginTop="500sp"
        android:src="@drawable/noworkout" />

    <TextView
        android:id="@+id/wtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180sp"
        android:layout_marginTop="530sp"
        android:textSize="12sp"
        android:text="@string/exerciseType" />

    <TextView
        android:id="@+id/workoutType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="530sp"
        android:textSize="12sp"
        android:text="@string/noexercise" />

    <TextView
        android:id="@+id/wtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180sp"
        android:layout_marginTop="570sp"
        android:textSize="12sp"
        android:text="@string/exerciseTime" />

    <TextView
        android:id="@+id/workoutTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250sp"
        android:layout_marginTop="570sp"
        android:textSize="12sp"
        android:text="@string/noexercise" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>