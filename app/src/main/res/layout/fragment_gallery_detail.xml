<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:id="@+id/galleryDetailContainer"
    tools:context=".GalleryDetail">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/detailGalleryImage"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:contentDescription="Workout Image"
            android:scaleType="centerCrop"
            android:src="@drawable/blankimg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/myfont3"
                android:text="detail date"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:layout_marginTop="16dp" />

            <ImageButton
                android:id="@+id/editBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:adjustViewBounds="true"
                android:background="@drawable/circular_button_background"
                android:contentDescription="Edit Button"
                android:layout_marginLeft="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/editbtn"
                android:text="Edit"
                android:textColor="#000000" />

        </RelativeLayout>


    </LinearLayout>


</FrameLayout>